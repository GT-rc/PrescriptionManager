@model PrescriptionManager.ViewModels.AddMedViewModel

@{
    ViewData["Title"] = "Add New Medication";
}
<h2>Add A New Medication</h2>

<p>add fields: pharmacy, scrip #, and prescribing dr.</p>

<form asp-controller="Medication" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dosage"></label>
        <input class="form-control" asp-for="Dosage" />
        <span asp-validation-for="Dosage"></span>
    </div>

    <div class="form-group">
        <label asp-for="PillsPerDose"></label>
        <input class="form-control" asp-for="PillsPerDose" />
        <span asp-validation-for="PillsPerDose"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrescribingDoctor"></label>
        <input class="form-control" asp-for="PrescribingDoctor" />
        <span asp-validation-for="PrescribingDoctor"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pharmacy"></label>
        <input class="form-control" asp-for="Pharmacy" />
        <span asp-validation-for="Pharmacy"></span>
    </div>

    <div class="form-group">
        <label asp-for="ScripNumber"></label>
        <input class="form-control" asp-for="ScripNumber" />
        <span asp-validation-for="ScripNumber"></span>
    </div>

    <div class="form-group">
        <label asp-for="ToDID"></label>
        <select asp-for="SelectedTime" asp-items="Model.ToDay" ></select>
        <span asp-validation-for="ToDID"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="RefillRate"></label>
        <input class="form-control" asp-for="RefillRate" />
        <span asp-validation-for="RefillRate"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes"></label>
        <input class="form-control" asp-for="Notes" />
        <span asp-validation-for="Notes"></span>
    </div>




    <input type="submit" value="Add Medication" />

</form>