@model IList<Medication>

@{
    ViewData["Title"] = "Medication Home";
}
<h1>Your Medications</h1>

<h3><a asp-controller="Medication" asp-action="Add">Add a New Medication</a></h3>

@if (Model.Count == 0)
{
    <p>No Medications Yet!</p>
} else {

<table class="table">
    <tr>
        <th>Medication</th>
        <th>Dosage</th>
        <th>N/A</th>
        <th>Time of Day Taken</th>
        <th>Refill After (Days)</th>
        <th>Edit</th>
        
    </tr>

    @foreach (Medication item in Model)
    {
        <tr>
            <td><a asp-controller="Medication" asp-action="View" asp-route-id="@item.ID">@item.Name</a></td>
            <td>@item.Dosage</td>
            <td>what what??!!</td>
            <td>@item.TimeOfDay</td>
            <td>@item.RefillRate</td>
            <td><a asp-controller="Medication" asp-action="Edit" asp-route-id="@item.ID">Edit Medication</a></td>
            
        </tr>
    }
</table>

<h4><a asp-controller="Medication" asp-action="Remove" >Remove Medication</a></h4>
}

