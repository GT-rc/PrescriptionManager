@model IList<Medication> 

@{
    ViewData["Title"] = "Full List of Current Medications";
}
<h1>Your Current Medications</h1>

@if (Model.Count == 0)
{
    <p>No Medications Yet!</p>
}
else
{
    foreach (var item in Model)
    {
        <h4>@item.Name</h4>
        <table class="table">
            <tr>
                <th>Dosage</th>
                <th>Time Of Day</th>
                <th>Pills Per Dose</th>
            </tr>
            <tr>
                <td>@item.Dosage</td>
                <td>@item.TimeOfDay</td>
                <td>@item.PillsPerDose</td>
            </tr>
        </table>
        <p><strong>Notes: </strong>@item.Notes</p>
        <br />
    }
}